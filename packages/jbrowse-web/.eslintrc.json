{
  "parser": "babel-eslint",
  "extends": [
    "airbnb",
    "prettier",
    "prettier/react"
  ],
  "plugins": [
    "prettier"
  ],
  "env": {
    "browser": true
  },
  "rules": {
    "class-methods-use-this": "off",
    "no-debugger": "warn",
    "no-param-reassign": "off",
    "no-unused-vars": "warn",
    "no-use-before-define": "off",
    "react/jsx-filename-extension": "off",
    "react/prefer-stateless-function": "warn",
    "react/no-unused-state": "warn",
    "react/destructuring-assignment": "off",
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "semi": false,
        "trailingComma": "all"
      }
    ]
  },
  "overrides": [
    {
      "files": [
        "src/**/*.worker.js"
      ],
      "globals": {
        "self": true
      },
      "rules": {
        "no-restricted-globals": 0
      }
    },
    {
      "files": [
        "src/**/*.test.js"
      ],
      "env": {
        "jest": true
      },
      "globals": {
        "document": true,
        "it": true,
        "describe": true,
        "test": true
      },
      "rules": {
        "no-restricted-globals": 0
      }
    }
  ]
}
